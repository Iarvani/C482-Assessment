<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Layout.ModPartController">
    <!-- logo image designed by Israel Arvanitas -->
    <ImageView
            fx:id="imageView"
            fitHeight="150.0"
            fitWidth="200.0"
            layoutX="600.0"
            layoutY="10.0"
            pickOnBounds="true"
            preserveRatio="true"
    >
    </ImageView>

    <Label fx:id="lblModifyPartScreen" layoutX="14.0" layoutY="14.0" text="Add Part">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    <RadioButton fx:id="radioPartInHouse" layoutX="190.0" layoutY="30.0" mnemonicParsing="false" onAction="#modifyPartInHouseRadio" selected="true" text="In-House" />
    <RadioButton fx:id="radioPartOutsourced" layoutX="350.0" layoutY="30.0" mnemonicParsing="false" onAction="#modifyPartOutsourcedRadio" text="Outsourced" />
    <Label fx:id="lblModID" layoutX="125.0" layoutY="100.0" text="ID">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <Label fx:id="lblModPartID" alignment="CENTER" layoutX="250.0" layoutY="85.0" prefHeight="40.0" prefWidth="150.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-border-style: solid; -fx-padding: 5;" text="Auto Gen - Disabled">
        <font>
            <Font name="System Italic" size="14.0" />
        </font>
    </Label>
    <Label fx:id="lblModPartName" layoutX="125.0" layoutY="175.0" text="Name">
        <font>
            <Font size="14.0" />
        </font></Label>
    <TextField fx:id="txtModPartName" layoutX="250.0" layoutY="160.0" prefHeight="40.0" prefWidth="150.0" promptText="Part Name">
        <font>
            <Font name="System Italic" size="14.0" />
        </font></TextField>
    <Label fx:id="lblModPartInv" layoutX="125.0" layoutY="250.0" text="Inv">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="txtModPartInv" layoutX="250.0" layoutY="235.0" prefHeight="40.0" prefWidth="150.0" promptText="Inv">
        <font>
            <Font name="System Italic" size="14.0" />
        </font>
    </TextField>
    <Label fx:id="lblModPartPrice" layoutX="125.0" layoutY="325.0" text="Price/Cost">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="txtModPartPrice" layoutX="250.0" layoutY="310.0" prefHeight="40.0" prefWidth="150.0" promptText="Price/Cost">
        <font>
            <Font name="System Italic" size="14.0" />
        </font></TextField>
    <Label fx:id="lblModPartMin" layoutX="125.0" layoutY="400.0" text="Min">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="txtModPartMin" layoutX="250.0" layoutY="385.0" prefHeight="40.0" prefWidth="100.0" promptText="Min">
        <font>
            <Font name="System Italic" size="14.0" />
        </font>
    </TextField>
    <Label fx:id="lblModPartMax" layoutX="425.0" layoutY="400.0" text="Max">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="txtModPartMax" layoutX="480.0" layoutY="385.0" prefHeight="40.0" prefWidth="100.0" promptText="Max">
        <font>
            <Font name="System Italic" size="14.0" />
        </font></TextField>
    <Label fx:id="lblModPartSource" layoutX="125.0" layoutY="475.0" text="Machine ID">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="txtModPartSource" layoutX="250.0" layoutY="460.0" prefHeight="50.0" prefWidth="280.0"  promptText="Machine ID">
        <font>
            <Font name="System Italic" size="14.0" />
        </font>
    </TextField>

    <Button fx:id="btnAddPartSave" layoutX="400.0" layoutY="600.0" mnemonicParsing="false" onAction="#modPartSave" prefHeight="35.0" prefWidth="75.0" text="Save" />
    <Button fx:id="btnAddPartCancel" layoutX="500.0" layoutY="600.0" mnemonicParsing="false" onAction="#modPartCancel" prefHeight="35.0" prefWidth="75.0" text="Cancel" />
    <Button fx:id="btnHome" layoutX="600.0" layoutY="600.0" onAction="#openHomeScreen" mnemonicParsing="false" prefHeight="35.0" prefWidth="75.0" text="Home"/>
    <Button fx:id="btnExit" layoutX="700.0" layoutY="600.0" mnemonicParsing="false" onAction="#exitButton" prefHeight="35.0" prefWidth="75.0" text="Exit"/>

</AnchorPane>
